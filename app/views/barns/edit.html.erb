<h2>Edit Barn</h2>

<%= form_with url: "/barns/#{@barn.id}", method: :patch, local: true do |form| %>
 <p><%= form.label :location %></p>
  <p><%= form.text_field :location, value: @barn.location %></p>
 <p><%= form.label :name %></p>
  <p><%= form.text_field :name, value: @barn.name %></p>
 <p><%= form.label :arena %></p>
  <p><%= form.text_field :arena, value: @barn.arena %></p>
 <p><%= form.label :trail_access %></p>
  <p><%= form.text_field :trail_access, value: @barn.trail_access %></p>
 <p><%= form.label :monthly_fee %></p>
  <p><%= form.text_field :monthly_fee, value: @barn.monthly_fee %></p>
 <p><%= form.label :stalls %></p>
  <p><%= form.text_field :stalls, value: @barn.stalls %></p>
 <p><%= form.label :vacancy %></p>
  <p><%= form.text_field :vacancy, value: @barn.vacancy%></p>
  
  <br>
  <%= form.submit 'Update Barn' %>
<% end %>

