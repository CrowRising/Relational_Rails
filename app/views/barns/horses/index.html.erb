<h2> All the Horses at <%="#{@barn.name}"%></h2>
<%= link_to "Sort Alphabetical", "/barns/#{@barn.id}/horses?sort=order_alpha" %>
<br>
<% @horses.each do |horse| %>
<h4><p>Name: <%= horse.name %></p></h4>
  <p>Breed: <%= horse.breed %></p>
  <p>Age: <%= horse.age %></p>
  <p>Trail_user: <%= horse.trail_user %></p>
  <p>Arena_user: <%= horse.arena_user %></p>
  <p>Paid: <%= horse.paid %></p>
  <%end%>
<br>
<%= link_to 'Create Horse', "/barns/#{@barn.id}/horses/new"%>